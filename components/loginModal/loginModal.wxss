.main {
    background: rgba(0,0,0,.5);
    left: 0;
    right: 0;
    top: 0;
}

.main,.main .login-panel {
    bottom: 0;
    position: fixed;
    z-index: 1000;
}

.main .login-panel {
    background: #fff;
    border-radius: 16rpx 16rpx 0rpx 0rpx;
    height: 612rpx;
    text-align: center;
    width: 100%;
}

.main .login-panel .btn-close {
    position: absolute;
    right: 32rpx;
    top: 32rpx;
}

.main .login-panel .btn-close .icon-close {
    display: inline-block;
    height: 64rpx;
    width: 64rpx;
}

.main .login-panel .logo {
    margin-bottom: 48rpx;
    margin-top: 96rpx;
}

.main .login-panel .logo .img {
    border-radius: 50%;
    display: inline-block;
    height: 80rpx;
    width: 80rpx;
}

.main .login-panel .info {
    color: #383d3b;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 32rpx;
    font-weight: 400;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
}

.main .login-panel .btn-group {
    margin-top: 96rpx;
}

.main .login-panel .btn-group .btn {
    background: linear-gradient(135deg,#00befe,#357ded);
    border-radius: 8rpx;
    color: #fff;
    font-size: 32rpx;
    height: 96rpx;
    line-height: 96rpx;
    margin: 0 auto 58rpx;
    width: 654rpx;
}

.main .login-panel .agreement {
    color: #383d3b;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    height: 36rpx;
    line-height: 36rpx;
}

.main .login-panel .agreement .btn {
    color: #357ded;
    display: inline-block;
}