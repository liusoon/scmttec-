.ms-arrow {
    display: inline-block;
    height: 10rpx;
    width: 10rpx;
}

.ms-arrow:before {
    border-color: #383d3b;
    border-style: solid;
    border-width: 2rpx 2rpx 0 0;
    content: " ";
    display: inline-block;
    height: 8rpx;
    margin-top: -4rpx;
    transform: matrix(1,1,-1,1,0,0);
    width: 8rpx;
}

.ms-arrow_left:before {
    border-width: 0 0 2rpx 2rpx;
    left: 10rpx;
    position: absolute;
    top: 50%;
    z-index: 10;
}

.ms-arrow_right:before {
    position: absolute;
    right: 10rpx;
    top: 50%;
    z-index: 10;
}

.ms-calendar {
    background-color: #fff;
    font-size: 28rpx;
    padding-bottom: 8rpx;
}

.ms-calendar .ms-calendar_header {
    color: #1f3151;
    position: relative;
    text-align: center;
}

.ms-calendar .ms-calendar_header .ms-cur_date {
    color: #383d3b;
    display: inline-block;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 28rpx;
    vertical-align: middle;
}

.ms-calendar .ms-calendar_header .btn {
    display: inline-block;
    height: 50rpx;
    position: absolute;
    right: 0;
    vertical-align: middle;
    width: 50rpx;
    z-index: 10;
}

.ms-calendar .ms-calendar_header .left {
    left: 2rpx;
}

.ms-calendar .ms-calendar_main {
    color: #dce1e9;
    font-size: 28rpx;
    text-align: center;
    width: 100%;
}

.ms-calendar .ms-calendar_main .ms-calendar_week_title {
    display: flex;
    margin: 40rpx auto 32rpx;
}

.ms-calendar .ms-calendar_main .ms-calendar_week_title .txt {
    color: #8d99ae;
    color: #8797b2;
    flex: 1;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
    height: 28rpx;
    line-height: 28rpx;
}

.ms-calendar .ms-calendar_main .ms-date_week {
    display: flex;
}

.ms-calendar .ms-calendar_main .ms-date_week .ms-date_day {
    display: inline-block;
    flex: 1;
    text-align: center;
}

.ms-calendar .ms-calendar_main .ms-date_week .ms-date_day .ms-day_num {
    padding: 10rpx 0;
    position: relative;
    z-index: 10;
}

.ms-calendar .ms-calendar_main .ms-date_week .ms-date_day .ms-day_num .ms-date_full {
    color: #f25757;
    font-size: 20rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
}

.ms-calendar .ms-calendar_main .ms-date_week .ms-date_day .workday {
    color: #383d3b;
}

.ms-calendar .ms-calendar_main .ms-date_week .ms-date_day .checked {
    color: #fff;
}

.ms-calendar .ms-calendar_main .ms-date_week .ms-date_day .checked:before {
    background: #357ded;
    border-radius: 50%;
    color: #fff;
    content: "";
    display: inline-block;
    height: 56rpx;
    left: 19rpx;
    line-height: 56rpx;
    overflow: hidden;
    position: absolute;
    top: 5rpx;
    width: 56rpx;
    z-index: -1;
}

.ms-calendar .ms-calendar_tip {
    color: #8797b2;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    margin: 10rpx 4rpx 20rpx;
}

.ms-calendar .ms-calendar_tip .icon {
    display: inline-block;
    height: 32rpx;
    margin-right: 8rpx;
    position: relative;
    top: 7rpx;
    width: 32rpx;
}