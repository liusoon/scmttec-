.modal-mask {
    background: #000;
    color: #fff;
    height: 100%;
    opacity: .5;
    top: 0;
    width: 100%;
    z-index: 9000;
}

.modal-dialog,.modal-mask {
    left: 0;
    overflow: hidden;
    position: fixed;
}

.modal-dialog {
    background: #f9f9f9;
    border-radius: 16rpx;
    margin: -180rpx 105rpx;
    top: 500rpx;
    width: 540rpx;
    z-index: 9999;
}

.modal-title {
    color: #1a2129;
    font-family: PingFangSC-Medium;
    font-size: 32rpx;
    font-weight: 500;
    height: 32rpx;
    line-height: 32rpx;
    margin: 48rpx auto 32rpx;
    text-align: center;
}

.modal-content {
    color: #1a2129;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 44rpx;
    min-height: 44rpx;
    padding: 0rpx 44rpx;
    text-align: justify;
}

.modal-content .txt {
    margin-bottom: 10rpx;
}

.modal-footer {
    border-top: 1rpx solid #ebebeb;
    display: flex;
    flex-direction: row;
    font-size: 34rpx;
    height: 96rpx;
    line-height: 96rpx;
    margin-top: 32rpx;
}

.modal-footer .block {
    width: 100%!important;
}

.modal-footer .btn {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    font-weight: 400;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    width: 50%;
}

.modal-footer .btn.btn-cancel {
    border-right: 1rpx solid #dedede;
    color: #666;
}

.modal-footer .btn.btn-confirm {
    color: #0078f5;
}