.fl {
    float: left;
}

.fr {
    float: right;
}

.no-data-box {
    padding: 80rpx 0;
    text-align: center;
}

.no-data-box .image {
    height: 256rpx;
    width: 400rpx;
}

.no-data-loding {
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    text-align: center;
}

.no-data-loding .image {
    display: inline-block;
    height: 48rpx;
    margin-left: 10rpx;
    vertical-align: middle;
    width: 48rpx;
}

.loding-over {
    font-size: 26rpx;
}

.data-bottom-line {
    overflow: hidden;
    padding: 40rpx;
}

.data-bottom-line .fl {
    width: 33.3%;
}

.data-bottom-line .left,.data-bottom-line .right {
    border-bottom: 1rpx solid #dce1e9;
    margin-top: 18rpx;
}

.data-bottom-line .msg {
    color: #8797b2;
    font-size: 24rpx;
    text-align: center;
}

.full-screen {
    align-items: center;
    background: #fff;
    bottom: 0;
    display: flex;
    flex-direction: column;
    left: 0;
    padding-top: 400rpx;
    position: fixed;
    right: 0;
    top: 0;
    width: 100%;
    z-index: 1000;
}

.full-screen .image {
    display: inline-block;
    height: 200rpx;
    width: 200rpx;
}

.empty-data {
    display: block;
    margin-top: 48rpx;
}

.empty-data .empty-tips {
    background: rgba(220,225,233,.3);
    padding: 10rpx 31rpx;
}

.empty-data .empty-tips,.no-data-tips {
    border-radius: 32rpx;
    color: #8797b2;
    display: inline-block;
    font-family: PingFangSC-Regular,PingFang SC;
    font-size: 28rpx;
    font-weight: 400;
}

.no-data-tips {
    vertical-align: middle;
}